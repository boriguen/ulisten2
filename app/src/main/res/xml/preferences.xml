<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:key="pref_play_media"
        android:title="@string/preference_category_media_alerts">

        <com.botob.ulisten2.ui.settings.NumberPickerPreference
            android:defaultValue="3"
            android:key="pref_play_media_delay"
            android:persistent="true"
            android:title="@string/preference_play_media_delay" />

        <com.botob.ulisten2.ui.settings.NumberPickerPreference
            android:defaultValue="30"
            android:key="pref_play_media_interval"
            android:persistent="true"
            android:title="@string/preference_play_media_interval" />

        <ListPreference
            android:defaultValue="1"
            android:dialogTitle="@string/preference_play_media_speed"
            android:entries="@array/pref_playSpeed_entries"
            android:entryValues="@array/pref_playSpeed_values"
            android:key="pref_play_media_speed"
            android:persistent="true"
            android:title="@string/preference_play_media_speed" />

    </PreferenceCategory>

</PreferenceScreen>